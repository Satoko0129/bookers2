<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <form enctype="multipart/form-data" action="/current_user" accept-charset="UTF-8" method="post">
          <div class="form-group">
            <%= form_with model: @user do |f| %>
              <label for="inputName">Name</label>
              <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
            <% end %>
          </div>
          
          <div class="form-group">
            <label for="inputImage">ProfileImage</label>
            <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
          </div>
          
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <textarea class="orm-control introduction"></textarea>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>