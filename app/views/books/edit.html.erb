<h1>Editing Book</h1>

<%= form_with model: @book, local: true do |f| %>
  <label for="book_title">Title</label>
    <%= f.text_field :title %>
  <label for="opinion">Opinion</label>
    <%= f.text_area :opinion %>
    <%= f.submit 'Update Book', class:"btn btn-success" %>
<% end %>

<%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>