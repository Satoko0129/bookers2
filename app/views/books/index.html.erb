<main>
<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
  <%= render 'users/list', user: @user %>
  <%= render 'books/list', book: @newbook %>
    </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
          <%= @books.each do |book| %>
         <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag @user.get_profile_image(100,100) %>
                <% end %>
              </td>

              <td>
                <%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %>
              </td>

              <td><%= book.body %></td>

              <td>
                <%= link_to "Edit", edit_book_path(book.id), class: 'btn btn-sm btn-success' %>
              </td>

              <td>
                <%= link_to "Destroy", books_path(book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
              </td>
            </tr>
          </tbody>
        </table>
        <% end %>
        </div>
      </div>
    </div>
   </main>